<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linearlayloutfragb"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Fragment B"
            android:id="@+id/txtViewSongName" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pause_circle_outline_48dp"
            android:id="@+id/toggleButton"
            android:background="@android:color/transparent"
            android:layout_gravity="right"
            />
    </LinearLayout>



    <RelativeLayout
        android:background="@color/black"
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageViewBackground"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />

        <SeekBar
            android:id="@+id/seekBarMusic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_above="@+id/buttonBack"
            android:layout_marginTop="26dp"
            android:max="100" >
        </SeekBar>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonBack"
            android:src="@drawable/ic_skip_previous_48dp"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/queueMusic"
            android:src="@drawable/ic_queue_music_48dp"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/imageButtonRepeat"
            android:layout_alignStart="@+id/imageButtonRepeat" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonForward"
            android:src="@drawable/ic_skip_next_48dp"
            android:background="@android:color/transparent"
            android:layout_alignBottom="@+id/buttonBack"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewAlbumArt"
            android:paddingTop="100px"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonRepeat"
            android:src="@drawable/ic_trending_neutral_24dp"
            android:background="@android:color/transparent"
            android:layout_above="@+id/seekBarMusic"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>